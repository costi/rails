source 'https://rubygems.org'

gem 'rdoc', '=2.5.11'
gem 'mocha', '=0.9.7'
gem 'RedCloth'
gem 'sqlite3', '=1.3.13'
gem 'rack', '< 1.5'
gem 'memcache-client'
gem 'fcgi'

if RUBY_VERSION >= '2.4'
  # "mysql" will not compile any more
  # "mysql2" 0.3+ does not support Rails 2.3 (missing activerecord-mysql2-adapter)
  gem 'mysql2', '<0.3'
else
  gem 'mysql'
end

if RUBY_VERSION >= '2'
  gem 'rake', '~> 10.4'
  gem 'pg'
  gem 'nokogiri', '=1.8.0'
  gem 'test-unit'
else
  gem 'rake', '=0.8.7'
  gem 'pg', '=0.9.0'
  gem 'nokogiri', '=1.3.3'
end

gem 'libxml-ruby', '=3.0.0'

gem 'railslts-version', :path => 'railslts-version'
